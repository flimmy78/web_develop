	<bean id="hgMessageController" class="com.zhicloud.op.controller.HttpGatewayMessageController"></bean>
	<bean id="hgAsyncMessageController" class="com.zhicloud.op.controller.HttpGatewayAsyncMessageController"></bean>
	
	
